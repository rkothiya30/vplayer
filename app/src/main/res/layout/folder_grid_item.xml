<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



        <ImageView
            android:id="@+id/folderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_grid_folder"
            app:tint="@color/folder_color" />



            <TextView
                android:id="@+id/folderTitle"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/folderIcon"
                android:text="name"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/videoCount"
                android:text="-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/folderTitle"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"

                android:textColor="#808d97"
                android:textSize="@dimen/_14sdp" />


