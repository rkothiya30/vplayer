<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_248sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/app_video_center_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sleepLayout"
        android:layout_width="@dimen/_248sdp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/action_sleep_timer"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/Grey_300"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/close_sleep"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:padding="10dp"
                android:src="@drawable/ic_close_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:paddingLeft="34dp"
            android:paddingRight="34dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/sleepHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_color_primarary"
                    android:hint="00"
                    android:maxLength="2"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/md_grey_white_dark"
                    android:textSize="@dimen/_24sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:inputType="number"
                    android:text="HH"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/sleepMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_color_primarary"
                    android:hint="00"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/md_grey_white_dark"
                    android:textSize="@dimen/_24sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="MM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stopSleepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Stop"
                android:textColor="@color/colorSubTextWhite"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/startSleepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>